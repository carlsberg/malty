    "eslint-plugin-testing-library": "^5.10.2",
    "eslint-webpack-plugin": "^3.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.3.1",
    "lerna": "^8.1.3",
    "prettier": "^2.8.4",
    "prettier-plugin-organize-imports": "^3.2.2",
    "react": "^17.0.2",
    "react-dom": "^18.3.1",
    "react-test-renderer": "^17.0.2",
    "storybook": "^7.6.19",
    "styled-components": "^6.1.13",
    "styled-normalize": "^8.0.7",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5",
    "url-loader": "^4.1.1",
    "uuid": "^10.0.0",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "resolutions": {
    "styled-components": "^5",
    "node-forge": "^1.3.1",
    "glob-parent": "^5.1.2",
    "trim": "^0.0.3",
    "trim-newlines": "^3.0.1",
    "braces": "^3.0.3",
    "json5": "^2.2.2",
    "react": "<18.0.0",
    "react-dom": "<18.0.0",
    "@types/react": "<18.0.0",
    "@types/react-dom": "<18.0.0",
    "semver": "^7.5.2",
    "@adobe/css-tools": "4.3.2",
    "postcss": "8.4.31",
    "jackspeak": "2.1.1",
    "ws": "^8.17.1",
    "body-parser": "^1.20.3",
    "express": "^4.20.0",
    "micromatch": "^4.0.8",
    "axios": "1.7.4"
  },
  "prettier": "@carlsberg/prettier-config",
  "nyc": {
    "report-dir": "cypress-coverage"
  },
  "packageManager": "yarn@4.3.1"
}
