{
  "name": "@carlsberg/carlsberg-malty",
  "homepage": "https://malty.carlsberggroup.com/",
  "url": "https://malty.carlsberggroup.com",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "keywords": [
    "carlsberg",
    "malty",
    "design system",
    "component library"
  ],
  "description": "Malty, probably the best Design System in the world",
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/carlsberg/malty.git"
  },
  "workspaces": [
    "malty/atoms/*",
    "malty/molecules/*",
    "malty/organisms/*",
    "malty/utils/*",
    "malty/theme/*",
    "malty/icons/*"
  ],
  "scripts": {
    "clean": "lerna exec -- rm -rf ./lib && rm -rf ./node_modules",
    "wipe": "yarn cache clean --force",
    "reset": "yarn clean && yarn wipe && yarn install && yarn storybook",
    "watch": "tsc -b -w --preserveWatchOutput",
    "compile": "tsc -b",
    "start": "yarn storybook",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build -o docs",
    "build": "lerna run build",
    "test": "rm -rf ./malty/**/lib && jest",
    "test:ci": "rm -rf ./malty/**/lib && jest --silent --ci --coverage --coverageDirectory=jest-coverage",
    "test:watch": "rm -rf ./malty/**/lib && jest --watch",
    "format": "prettier --write . --loglevel error",
    "check-lint": "eslint \"{malty,cypress}/**/*.{js,ts,tsx}\" --max-warnings=9",
    "lint": "yarn check-lint --fix",
    "check-types": "tsc --noemit && tsc --project ./cypress --noemit",
    "check-format": "prettier --check .",
    "set-peer-dep": "node ./scripts/set-peer-dependency.mjs",
    "cypress:open": "cypress open",
    "cypress:run:desktop": "docker run --platform linux/amd64 -v $PWD:/e2e -w /e2e -e BASE_URL=http://host.docker.internal:6006 cypress/included:cypress-13.6.4-node-20.11.0-chrome-121.0.6167.85-1-ff-120.0-edge-121.0.2277.83-1 --browser chrome --config viewportWidth=1024,viewportHeight=768",
    "cypress:ci:desktop": "cypress run --browser chrome --config viewportWidth=1024,viewportHeight=768",
    "cypress:move-snapshots": "node ./scripts/move-snapshots.mjs"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "@tanstack/react-table": "^8.7.6",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.1",
    "react-datepicker": "^4.8.0",
    "react-dom": "^18.3.1",
    "react-popper": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.6",
    "@babel/plugin-syntax-flow": "^7.24.6",
    "@babel/preset-env": "^7.24.6",
    "@babel/preset-flow": "^7.24.6",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.6",
    "@carlsberg/eslint-config-carlsberg": "^0.3.0",
    "@carlsberg/prettier-config": "^0.0.1",
    "@pragmatics/conventional-changelog-preset": "^1.1.1",
    "@storybook/addon-actions": "^7.6.19",
    "@storybook/addon-docs": "^7.6.19",
    "@storybook/addon-essentials": "^7.6.19",
    "@storybook/addon-links": "^7.6.19",
    "@storybook/addons": "^7.6.19",
    "@storybook/react": "^7.6.19",
    "@storybook/react-webpack5": "^7.6.19",
    "@storybook/theming": "^7.6.19",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^13.5.0",
    "@types/babel__core": "^7.1.20",
    "@types/jest": "^29.4.0",
    "@types/pngjs": "^6.0.4",
    "@types/react": "^18.0.28",
    "@types/react-beautiful-dnd": "^13.1.3",
    "@types/react-datepicker": "^4.8.0",
    "@types/react-dom": "^18.3.0",
    "@types/react-table": "^7.7.14",
    "@types/react-test-renderer": "^17.0.2",
    "@types/styled-components": "^5.1.26",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.53.0",
    "babel-jest": "^29.4.1",
    "babel-loader": "^9.1.2",
    "cypress": "13.6.4",
